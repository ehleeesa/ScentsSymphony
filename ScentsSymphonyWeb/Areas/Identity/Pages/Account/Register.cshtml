@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row mt-5">
    <div class="col-md-4 mx-auto">
        <h1 class="text-center mb-4">@ViewData["Title"]</h1>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 position-relative">
                <input asp-for="Input.Password" type="password" class="form-control" id="password" autocomplete="new-password" />
                <label asp-for="Input.Password"></label>
                <button type="button" class="btn btn-sm btn-outline-secondary position-absolute top-50 end-0 translate-middle-y me-2 rounded-circle p-1" onclick="togglePasswordVisibility('password', this)">
                    <i class="bi bi-eye small"></i>
                </button>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 position-relative">
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" id="confirmPassword" autocomplete="new-password" />
                <label asp-for="Input.ConfirmPassword"></label>
                <button type="button" class="btn btn-sm btn-outline-secondary position-absolute top-50 end-0 translate-middle-y me-2 rounded-circle p-1" onclick="togglePasswordVisibility('confirmPassword', this)">
                    <i class="bi bi-eye small"></i>
                </button>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePasswordVisibility(inputId, button) {
            const input = document.getElementById(inputId);
            const icon = button.querySelector("i");

            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("bi-eye");
                icon.classList.add("bi-eye-slash");
            } else {
                input.type = "password";
                icon.classList.remove("bi-eye-slash");
                icon.classList.add("bi-eye");
            }
        }
    </script>
}
