@model ScentsSymphonyWeb.Models.Payment
@using ScentsSymphonyWeb.Helpers

<h2>Delete Payment</h2>
<div>
    <p>Payment ID: @Model.PaymentID</p>
    <p>Order ID: @Model.OrderID</p>
    <p>Amount: @Model.Amount.ToRon()</p>
    <p>Payment Date: @Model.PaymentDate</p>
    <p>Payment Method: @Model.PaymentMethod</p>
    <p>Status: @Model.Status</p>
</div>
<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="PaymentID" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>